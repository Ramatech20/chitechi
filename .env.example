# Example .env file for Django production
# Copy to .env and fill with your actual secrets (do NOT commit .env to version control)

DJANGO_SECRET_KEY=your-production-secret-key
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=*

# Database settings
DJANGO_DB_ENGINE=django.db.backends.mysql
DJANGO_DB_NAME=kusca
DJANGO_DB_USER=ramadhan
DJANGO_DB_PASSWORD=your-db-password
DJANGO_DB_HOST=localhost
DJANGO_DB_PORT=3306

# Security settings
DJANGO_SECURE_SSL_REDIRECT=True
DJANGO_SESSION_COOKIE_SECURE=True
DJANGO_CSRF_COOKIE_SECURE=True
DJANGO_SECURE_HSTS_SECONDS=31536000
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=True
DJANGO_SECURE_HSTS_PRELOAD=True
DJANGO_SECURE_BROWSER_XSS_FILTER=True
DJANGO_SECURE_CONTENT_TYPE_NOSNIFF=True
DJANGO_X_FRAME_OPTIONS=DENY
